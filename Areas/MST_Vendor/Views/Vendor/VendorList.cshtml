@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Data;
@model DataTable;

<div class="d-flex flex-row justify-content-between" style="margin-bottom:20px">


    <div class="pagetitle">
        <h3>Vendor List</h3>
    </div>
    <div>
        <a class="btn bg-success text-white" asp-area="MST_Vendor" asp-controller="Vendor" asp-action="VendorAddEdit">Add</a>
    </div>

</div>

<div class="card">

    <div class="card-body">

        <table class="table table-light table-striped table-borderless text-center mt-3 ">
            <thead class="table-light">
            <th>VendorName</th>
            <th>CompanyName</th>
            <th>ContactNumber</th>
            <th>Email</th>
            <th>Address</th>
            <th colspan="2">Action</th>
            </thead>
            <tbody id="sample_2">
                @foreach (DataRow dr in Model.Rows)
                {
                    <tr>
                        <form method="post" asp-action="MST_Vendor" asp-controller="Vendor" asp-action="VendorSelectByID">
                            <input type="hidden" name="VendorID" value="@int.Parse(dr["VendorID"].ToString())" />
                        </form>
                        <td>@dr["VendorName"]</td>
                        <td>@dr["CompanyName"]</td>
                        <td>@dr["ContactNumber"]</td>
                        <td>@dr["Email"]</td>
                        <td>@dr["Address"]</td>
                        <td>
                            <form method="post" asp-area="MST_Vendor" asp-controller="Vendor" asp-action="VendorAddEdit" asp-route-VendorID="@dr["VendorID"]">
                                <button type="submit" value="Edit" class="btn bg-warning text-dark align-text-center pr-7 pl-7">Edit</button>
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>
